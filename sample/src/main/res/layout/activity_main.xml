<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/shy_activity_vertical_margin"
    android:paddingLeft="@dimen/shy_activity_horizontal_margin"
    android:paddingRight="@dimen/shy_activity_horizontal_margin"
    android:paddingTop="@dimen/shy_activity_vertical_margin"
    android:orientation="vertical"
    tools:context="io.github.shygiants.sampleproject.MainActivity">

    <Button
        android:id="@+id/pick_multiple_photos"
        android:text="@string/pick_multiple_photos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/pick_single_photo"
        android:text="@string/pick_single_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
